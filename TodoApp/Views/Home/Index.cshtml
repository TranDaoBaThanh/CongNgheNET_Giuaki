@{
    ViewData["Title"] = "Home";
}

<div class="row align-items-center min-vh-75">
    <div class="col-lg-6 order-lg-2">
        <svg class="img-fluid" viewBox="0 0 600 400" width="600" height="400" xmlns="http://www.w3.org/2000/svg">
            <rect x="80" y="50" width="440" height="300" rx="10" fill="#f8f9fa" stroke="#0d6efd" stroke-width="2" />
            <rect x="100" y="80" width="400" height="40" rx="5" fill="#e9ecef" />
            <rect x="110" y="90" width="20" height="20" rx="4" fill="#ffffff" stroke="#0d6efd" stroke-width="2" />
            <line x1="140" y1="100" x2="480" y2="100" stroke="#6c757d" stroke-width="2" />
            
            <rect x="100" y="130" width="400" height="40" rx="5" fill="#e9ecef" />
            <rect x="110" y="140" width="20" height="20" rx="4" fill="#ffffff" stroke="#0d6efd" stroke-width="2" />
            <path d="M116 147 L124 155 L132 143" stroke="#28a745" stroke-width="3" fill="none" />
            <line x1="140" y1="150" x2="480" y2="150" stroke="#6c757d" stroke-width="2" stroke-dasharray="2" />
            
            <rect x="100" y="180" width="400" height="40" rx="5" fill="#e9ecef" />
            <rect x="110" y="190" width="20" height="20" rx="4" fill="#ffffff" stroke="#0d6efd" stroke-width="2" />
            <line x1="140" y1="200" x2="480" y2="200" stroke="#6c757d" stroke-width="2" />
            
            <rect x="100" y="230" width="400" height="40" rx="5" fill="#e9ecef" />
            <rect x="110" y="240" width="20" height="20" rx="4" fill="#ffffff" stroke="#0d6efd" stroke-width="2" />
            <line x1="140" y1="250" x2="480" y2="250" stroke="#6c757d" stroke-width="2" />
            
            <rect x="100" y="280" width="400" height="40" rx="5" fill="#e9ecef" />
            <rect x="110" y="290" width="20" height="20" rx="4" fill="#ffffff" stroke="#0d6efd" stroke-width="2" />
            <path d="M116 297 L124 305 L132 293" stroke="#28a745" stroke-width="3" fill="none" />
            <line x1="140" y1="300" x2="480" y2="300" stroke="#6c757d" stroke-width="2" stroke-dasharray="2" />
            
            <circle cx="80" cy="70" r="40" fill="#0d6efd" opacity="0.2" />
            <circle cx="30" cy="200" r="30" fill="#28a745" opacity="0.2" />
            <circle cx="520" cy="350" r="50" fill="#fd7e14" opacity="0.2" />
        </svg>
    </div>
    <div class="col-lg-6 order-lg-1 mb-5 mb-lg-0">
        <h1 class="display-4 fw-bold">Organize Your Life with Modern Todo App</h1>
        <p class="lead my-4">
            Keep track of your tasks, prioritize your work, and accomplish your goals with our beautiful and intuitive todo list application.
        </p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a class="btn btn-primary btn-lg px-4 me-md-2" asp-controller="Todo" asp-action="Index">
                    <i class="bi bi-list-check me-2"></i>View My Tasks
                </a>
            }
            else
            {
                <a class="btn btn-primary btn-lg px-4 me-md-2" asp-controller="Account" asp-action="Register">
                    <i class="bi bi-person-plus me-2"></i>Sign Up
                </a>
                <a class="btn btn-outline-secondary btn-lg px-4" asp-controller="Account" asp-action="Login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                </a>
            }
        </div>
    </div>
</div>

<div class="row pt-5 mt-5">
    <div class="col-12 text-center mb-4">
        <h2>Key Features</h2>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center">
                <i class="bi bi-check2-circle text-primary" style="font-size: 2.5rem;"></i>
                <h4 class="card-title mt-3">Task Management</h4>
                <p class="card-text">Create, edit, and delete tasks easily. Mark them as complete when you're done.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center">
                <i class="bi bi-sort-numeric-down-alt text-primary" style="font-size: 2.5rem;"></i>
                <h4 class="card-title mt-3">Priority Levels</h4>
                <p class="card-text">Assign priorities to your tasks to focus on what's most important.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center">
                <i class="bi bi-calendar-date text-primary" style="font-size: 2.5rem;"></i>
                <h4 class="card-title mt-3">Due Dates</h4>
                <p class="card-text">Set due dates for your tasks and never miss a deadline again.</p>
            </div>
        </div>
    </div>
</div>
