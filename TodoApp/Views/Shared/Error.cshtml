@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <div class="alert alert-danger">
        <h1 class="display-4"><i class="bi bi-exclamation-triangle-fill me-3"></i>Error</h1>
        <h2 class="mb-4">An error occurred while processing your request.</h2>
        
        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p>@Model.ErrorMessage</p>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorDetail))
        {
            <div class="alert alert-secondary mt-3">
                <p>@Model.ErrorDetail</p>
            </div>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-house-door me-2"></i>Back to Home
            </a>
        </div>
    </div>
</div>
